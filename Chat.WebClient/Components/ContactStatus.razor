<div class="d-flex align-items-center pb-3" id="contact-info">
    <div class="p-2">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp" alt="avatar"
            width="40">
    </div>
    <div class="d-flex flex-column justify-content-center align-items-start">
        <div>@Name @@ @Username</div>
        @if (IsOnline)
        {
            <span class="badge text-bg-success">Online</span>
        }
        else
        {
            <span class="badge text-bg-secondary">Offline</span>
        }
    </div>
</div>

@code {

    public string Username { get; set; } = "Mike j";
    [Parameter]
    public string Name { get; set; } = "mj";

    public bool IsOnline { get; set; } = true;

}