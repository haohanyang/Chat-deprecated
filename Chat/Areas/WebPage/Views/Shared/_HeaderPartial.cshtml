@using Chat.Areas.WebPage.Models;
@model HeaderViewModel;

<header class="p-3 mb-3 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
            <ul class="nav col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a asp-area="WebPage" asp-controller="Home" asp-action="Index"
                        class="nav-link px-2 link-secondary">Chat</a></li>
                <li><a href="#" class="nav-link px-2 link-dark">About</a></li>
            </ul>

            @if (Model.LoggedInUser == null)
            {

                <ul class="nav">
                    <li><a class="nav-link px-2 link-dark" asp-area="WebPage" asp-controller="Auth" asp-action="Login">Log
                            in</a></li>
                    <li><a class="nav-link px-2 link-dark" asp-area="WebPage" asp-controller="Auth"
                            asp-action="Register">Register</a></li>
                </ul>
            }
            else
            {
                <div class="dropdown text-end">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="current-user-dropdown"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="mdo" class="rounded-circle" width="32" height="32">
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="current-user-dropdown">
                        <li><span class="dropdown-item">@@@Model.LoggedInUser.Username</span></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form class="dropdown-item" method="post" asp-area="WebPage" asp-controller="Auth"
                                asp-action="Logout">
                                <input class="form-control btn btn-outline-secondary" type="submit" value="Log out">
                            </form>
                        </li>
                    </ul>
                </div>
            }

        </div>
    </div>
</header>