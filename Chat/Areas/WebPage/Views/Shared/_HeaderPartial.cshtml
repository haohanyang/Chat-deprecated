  @model Chat.Areas.WebPage.Models.HeaderViewModel;

  <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                        <use xlink:href="#bootstrap"></use>
                    </svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-area="WebPage" asp-controller="Home" asp-action="Index" class="nav-link px-2 link-secondary">Chat</a></li>
                    <li><a href="#" class="nav-link px-2 link-dark">About</a></li>
                </ul>

                @if (Model.LoggedInUser == null) {

                <ul class="nav">
                    <li><a class="nav-link px-2 link-dark" asp-area="WebPage" asp-controller="Auth" asp-action="Login">Log in</a></li>
                    <li><a class="nav-link px-2 link-dark" asp-area="WebPage" asp-controller="Auth" asp-action="Register">Register</a></li>
                </ul>
                } else {
                <div class="dropdown text-end">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="current-user-dropdown"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="mdo" class="rounded-circle" width="32" height="32">
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="current-user-dropdown">
                        <li>@@@Model.LoggedInUser.Username</li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form class="dropdown-item" method="post" asp-area="WebPage" asp-controller="Auth" asp-action="Logout">
                                <input class="form-control btn btn-outline-secondary" type="submit" value="Log out">
                            </form>
                        </li>
                    </ul>
                </div>
                }

            </div>
        </div>
</header>