@using Chat.Areas.WebPage.Models;
@using Chat.Common.Dto;
@model HomeViewModel;

@{
    ViewData["Title"] = "Home";
}

@section Header {
    @await Html.PartialAsync("../Shared/_HeaderPartial.cshtml", new HeaderViewModel() { CurrentUser = Model.CurrentUser })
}

<div class="content-wrapper">
    <div class="content">
        <div class="container">
            <div class="jumbotron jumbotron-fluid" style="background-color: #f4f6f9;">
                @if (Model.RedirectMessage != null)
                {
                    var alert = Model.RedirectMessage.Type == RedirectMessageType.Success ? "alert-success" :
                    "alert-danger";
                    <div class="mx-2 alert @alert alert-dismissible fade show" role="alert">
                        @Model.RedirectMessage.Message
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <div class="container">
                    <h1 class="display-4">Connect and Collaborate Effortlessly</h1>
                    <p class="lead">Simplify communication, boost productivity, and enhance teamwork with our
                        intuitive chat app. Say goodbye to scattered conversations and hello to seamless
                        collaboration.</p>
                    @if (Model.CurrentUser != null)
                    {
                        <h2>Welcome back, @Model.CurrentUser.Name.Split(" ")[0]</h2>
                        <a class="lead" href="/chat">Go to the chat</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>